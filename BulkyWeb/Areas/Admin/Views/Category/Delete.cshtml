@model Category

<!-- Hauptcontainer für die Karte -->
<!--
    <div>: Ein Block-Container-Element.
    class="card shadow border-0 mt-4":
    - card: Bootstrap-Klasse für eine Kartenkomponente.
    - shadow: Bootstrap-Klasse, die einen Schatteneffekt hinzufügt.
    - border-0: Bootstrap-Klasse, die den Rand entfernt.
    - mt-4: Bootstrap-Klasse, die einen oberen Rand (Margin Top) von 4 Einheiten hinzufügt.
-->
<div class="card shadow border-0 mt-4">

    <!-- Kopfbereich der Karte -->
    <!--
        <div>: Ein Block-Container-Element.
        class="card-header bg-secondary bg-gradient ml-0 py-3":
        - card-header: Bootstrap-Klasse für den Kopfbereich einer Karte.
        - bg-secondary: Bootstrap-Klasse, die eine sekundäre Hintergrundfarbe hinzufügt.
        - bg-gradient: Bootstrap-Klasse, die einen Farbverlauf zum Hintergrund hinzufügt.
        - ml-0: Bootstrap-Klasse, die den linken Rand (Margin Left) auf 0 setzt.
        - py-3: Bootstrap-Klasse, die einen vertikalen Innenabstand (Padding Y) von 3 Einheiten hinzufügt.
    -->
    <div class="card-header bg-dark bg-gradient ml-1 py-2">

        <!-- Zeilencontainer für flexibles Layout -->
        <!--
            <div>: Ein Block-Container-Element.
            class="row": Bootstrap-Klasse, die eine Zeile für ein flexibles Grid-Layout erstellt.
        -->
        <div class="row">

            <!-- Spaltencontainer, um die Überschrift zentriert anzuzeigen -->
            <!--
                <div>: Ein Block-Container-Element.
                class="col-12 text-center":
                - col-12: Bootstrap-Klasse, die eine Spalte erstellt, die die gesamte Breite (12 Einheiten) einnimmt.
                - text-center: Bootstrap-Klasse, die den Text zentriert.
            -->
            <div class="col-12 text-center">

                <!-- Überschrift der Karte -->
                <!--
                    <h2>: HTML-Element für eine zweite Überschrift.
                    class="text-white py-2":
                    - text-white: Bootstrap-Klasse, die die Textfarbe weiß setzt.
                    - py-2: Bootstrap-Klasse, die einen vertikalen Innenabstand (Padding Y) von 2 Einheiten hinzufügt.
                -->
                <h2 class="text-white py-2">Delete Category</h2>
            </div>
        </div>
    </div>

    <!-- Hauptinhalt der Karte -->
    <!--
        <div>: Ein Block-Container-Element.
        class="card-body p-4":
        - card-body: Bootstrap-Klasse, die den Hauptinhalt einer Karte definiert.
        - p-4: Bootstrap-Klasse, die einen Innenabstand (Padding) von 4 Einheiten hinzufügt.
    -->
    <div class="card-body p-4">

        <!-- Formular zur Löschung einer Kategorie -->
        <!--
            <form>: HTML-Element zur Erstellung eines Formulars.
            method="post": Gibt an, dass das Formular die Methode POST verwendet, um Daten zu senden.
        -->
        <form method="post">

            <!-- Verstecktes Eingabefeld für die Kategorie-ID -->
            <!--
                <input>: HTML-Eingabefeld.
                asp-for="Id": Razor-Tag-Hilfsprogramm, das das Eingabefeld an die Eigenschaft "Id" des Modells bindet.
                hidden: Versteckt das Eingabefeld.
            -->
            <input asp-for="Id" hidden />

            <!-- Formularcontainer mit Rand und Innenabstand -->
            <!--
                <div>: Ein Block-Container-Element.
                class="border p-3 mt-4":
                - border: Bootstrap-Klasse, die einen Rand hinzufügt.
                - p-3: Bootstrap-Klasse, die einen Innenabstand (Padding) von 3 Einheiten hinzufügt.
                - mt-4: Bootstrap-Klasse, die einen oberen Rand (Margin Top) von 4 Einheiten hinzufügt.
            -->
            <div class="border p-3 mt-4">

                <!-- Eingabefeld für den Namen der Kategorie -->
                <!--
                    <div>: Ein Block-Container-Element.
                    class="form-floating py-2 col-12":
                    - form-floating: Bootstrap-Klasse, die ein schwebendes Label über dem Eingabefeld ermöglicht.
                    - py-2: Bootstrap-Klasse, die einen vertikalen Innenabstand (Padding Y) von 2 Einheiten hinzufügt.
                    - col-12: Bootstrap-Klasse, die eine Spalte erstellt, die die gesamte Breite (12 Einheiten) einnimmt.
                -->
                <div class="form-floating py-2 col-12">

                    <!-- Textfeld für den Namen, gebunden an die Modell-Eigenschaft "Name" -->
                    <!--
                        <input>: HTML-Element für ein Eingabefeld.
                        asp-for="Name": Tag-Hilfsprogramm, das das Eingabefeld an die Eigenschaft "Name" des Modells bindet.
                        disabled: Deaktiviert das Eingabefeld, um Änderungen zu verhindern.
                        class="form-control border-0 shadow":
                        - form-control: Bootstrap-Klasse, die das Eingabefeld formatiert.
                        - border-0: Bootstrap-Klasse, die den Rand des Eingabefelds entfernt.
                        - shadow: Bootstrap-Klasse, die einen Schatteneffekt hinzufügt.
                    -->
                    <input asp-for="Name" disabled class="form-control border-0 shadow bg-body" />

                    <!-- Beschriftung für das Eingabefeld "Name" -->
                    <!--
                        <label>: HTML-Element für ein Label.
                        asp-for="Name": Tag-Hilfsprogramm, das das Label an die Eigenschaft "Name" des Modells bindet.
                        class="ms-2": Bootstrap-Klasse, die einen linken Innenabstand (Margin Start) von 2 Einheiten hinzufügt.
                    -->
                    <label asp-for="Name" class="ms-2"></label>
                </div>

                <!-- Eingabefeld für die Anzeigereihenfolge der Kategorie -->
                <!--
                    <div>: Ein Block-Container-Element.
                    class="form-floating py-2 col-12":
                    - form-floating: Bootstrap-Klasse, die ein schwebendes Label über dem Eingabefeld ermöglicht.
                    - py-2: Bootstrap-Klasse, die einen vertikalen Innenabstand (Padding Y) von 2 Einheiten hinzufügt.
                    - col-12: Bootstrap-Klasse, die eine Spalte erstellt, die die gesamte Breite (12 Einheiten) einnimmt.
                -->
                <div class="form-floating py-2 col-12">

                    <!-- Textfeld für die Anzeigereihenfolge, gebunden an die Modell-Eigenschaft "DisplayOrder" -->
                    <!--
                        <input>: HTML-Element für ein Eingabefeld.
                        asp-for="DisplayOrder": Tag-Hilfsprogramm, das das Eingabefeld an die Eigenschaft "DisplayOrder" des Modells bindet.
                        disabled: Deaktiviert das Eingabefeld, um Änderungen zu verhindern.
                        class="form-control border-0 shadow":
                        - form-control: Bootstrap-Klasse, die das Eingabefeld formatiert.
                        - border-0: Bootstrap-Klasse, die den Rand des Eingabefelds entfernt.
                        - shadow: Bootstrap-Klasse, die einen Schatteneffekt hinzufügt.
                    -->
                    <input asp-for="DisplayOrder" disabled class="form-control border-0 shadow bg-body" />

                    <!-- Beschriftung für das Eingabefeld "DisplayOrder" -->
                    <!--
                        <label>: HTML-Element für ein Label.
                        asp-for="DisplayOrder": Tag-Hilfsprogramm, das das Label an die Eigenschaft "DisplayOrder" des Modells bindet.
                        class="ms-2": Bootstrap-Klasse, die einen linken Innenabstand (Margin Start) von 2 Einheiten hinzufügt.
                    -->
                    <label asp-for="DisplayOrder" class="ms-2"></label>
                </div>

                <!-- Container für die Formularaktionen -->
                <!--
                    <div>: Ein Block-Container-Element.
                    class="row mt-3":
                    - row: Bootstrap-Klasse, die eine Zeile für ein flexibles Grid-Layout erstellt.
                    - mt-3: Bootstrap-Klasse, die einen oberen Rand (Margin Top) von 3 Einheiten hinzufügt.
                -->
                <div class="row mt-3">

                    <!-- Spaltencontainer für den Lösch-Button -->
                    <!--
                        <div>: Ein Block-Container-Element.
                        class="col-6 col-md-3":
                        - col-6: Bootstrap-Klasse, die eine Spalte erstellt, die 6 von 12 Einheiten einnimmt.
                        - col-md-3: Bootstrap-Klasse, die eine Spalte erstellt, die 3 von 12 Einheiten auf mittleren Geräten (Tablets) einnimmt.
                    -->
                    <div class="col-6 col-md-3">

                        <!-- Absende-Button für das Formular -->
                        <!--
                            <button>: HTML-Element für einen Button.
                            type="submit": Gibt an, dass der Button das Formular absendet.
                            class="btn btn-danger form-control":
                            - btn: Bootstrap-Klasse für Buttons.
                            - btn-danger: Bootstrap-Klasse für einen roten, als gefährlich markierten Button.
                            - form-control: Bootstrap-Klasse, die den Button als Formularsteuerung formatiert.
                        -->
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>

                    <!-- Spaltencontainer für den "Back to List"-Button -->
                    <!--
                        <div>: Ein Block-Container-Element.
                        class="col-6 col-md-3":
                        - col-6: Bootstrap-Klasse, die eine Spalte erstellt, die 6 von 12 Einheiten einnimmt.
                        - col-md-3: Bootstrap-Klasse, die eine Spalte erstellt, die 3 von 12 Einheiten auf mittleren Geräten (Tablets) einnimmt.
                    -->
                    <div class="col-6 col-md-3">

                        <!-- Link zurück zur Index-Seite der Kategorie-Liste -->
                        <!--
                            <a>: HTML-Element für einen Link.
                            asp-controller="Category": Tag-Hilfsprogramm, das den Link mit dem Controller "Category" verbindet.
                            asp-action="Index": Tag-Hilfsprogramm, das den Link mit der Aktion "Index" verbindet.
                            class="btn btn-outline-primary border form-control":
                            - btn: Bootstrap-Klasse für Buttons.
                            - btn-outline-primary: Bootstrap-Klasse für einen umrandeten primären Button (blau).
                            - border: Bootstrap-Klasse, die einen Rand hinzufügt.
                            - form-control: Bootstrap-Klasse, die den Link als Formularsteuerung formatiert.
                        -->
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Skriptsektion für die Einbindung von Validierungsskripten -->
@section Scripts {
    <!--
        <partial>: Razor-Syntax, um eine partielle View einzubinden.
        name="_ValidationScriptsPartial": Name der partiellen View, die Validierungsskripte enthält.
    -->
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}



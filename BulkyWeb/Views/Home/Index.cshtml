@model List<Category>

<style>
    .neumorphic-card {
        background: #e0e0e0;
        border-radius: 12px;
        box-shadow: 20px 20px 60px #bebebe, -20px -20px 60px #ffffff;
        padding: 20px;
        margin-top: 20px;
    }

    .neumorphic-header {
        background: #e0e0e0;
        border-radius: 12px;
        box-shadow: inset 10px 10px 20px #bebebe, inset -10px -10px 20px #ffffff;
        text-align: center;
        padding: 15px;
        margin-bottom: 20px;
    }

    .neumorphic-button {
        background: #e0e0e0;
        border: none;
        border-radius: 12px;
        box-shadow: 6px 6px 12px #bebebe, -6px -6px 12px #ffffff;
        padding: 10px 20px;
        font-size: 16px;
        margin: 5px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .neumorphic-button:hover {
            box-shadow: 4px 4px 8px #bebebe, -4px -4px 8px #ffffff;
        }

    .neumorphic-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .neumorphic-table th, .neumorphic-table td {
            padding: 12px;
            text-align: left;
        }

        .neumorphic-table th {
            background: #e0e0e0;
            box-shadow: inset 4px 4px 8px #bebebe, inset -4px -4px 8px #ffffff;
        }

        .neumorphic-table td {
            background: #f0f0f0;
            box-shadow: inset 2px 2px 4px #bebebe, inset -2px -2px 4px #ffffff;
        }

    .neumorphic-btn-group {
        display: flex;
        justify-content: center;
    }

        .neumorphic-btn-group a {
            text-decoration: none;
            color: #333;
        }
</style>

<div class="neumorphic-card">
    <div class="neumorphic-header">
        <h2>Category List</h2>
    </div>
    <div>
        <div style="text-align: end; margin-bottom: 20px;">
            <a asp-controller="Category" asp-action="Create" class="neumorphic-button">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>

        @if (Model == null || !Model.Any())
        {
            <p>No categories available.</p>
        }
        else
        {
            <table class="neumorphic-table">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Display Order</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.DisplayOrder</td>
                            <td>
                                <div class="neumorphic-btn-group">
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="neumorphic-button">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="neumorphic-button">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>